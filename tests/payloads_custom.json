{
    "query.accountmetrics.site": {
        "name": "Account Metrics - Site Health Check",
        "description": "Monitor all key performance indicators for a specific site",
        "operation": "query.accountMetrics",
        "payload": {
            "buckets": 24,
            "groupDevices": true,
            "groupInterfaces": true,
            "labels": [
                "bytesDownstream",
                "bytesUpstream",
                "health",
                "lastMileLatency",
                "lastMilePacketLoss",
                "rtt"
            ],
            "siteIDs": [
                "144905"
            ],
            "timeFrame": "last.P1D",
            "perSecond": true,
            "toRate": true
        },
        "timeout": 30,
        "assertions": [
            "accountMetrics.metadata",
            "accountMetrics.sites"
        ]
    },
    "query.accountmetrics.users": {
        "name": "Account Metrics - User Performance Analysis",
        "description": "Analyze network performance for specific users",
        "operation": "query.accountMetrics",
        "payload": {
            "buckets": 24,
            "labels": [
                "health",
                "jitterDownstream",
