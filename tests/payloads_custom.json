                "lastMileLatency",
                "lastMilePacketLoss",
                "packetsDownstream",
                "packetsUpstream"
            ],
            "timeFrame": "last.P1D",
            "userIDs": [
                "1000000"
            ]
        },
        "timeout": 30,
        "assertions": [
            "accountMetrics.metadata",
            "accountMetrics.sites"
        ]
    },
    "query.accountmetrics.health": {
