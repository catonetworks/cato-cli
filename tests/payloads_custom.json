    "query.accountmetrics.packet_loss": {
        "name": "Account Metrics - Detailed Bandwidth Analysis",
        "description": "Focus on bandwidth utilization with packet loss metrics",
        "operation": "query.accountMetrics",
        "payload": {
            "buckets": 48,
            "labels": [
